generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Prisma Accelerate ve migrate deploy için doğrudan Postgres URL'si
  directUrl = env("DIRECT_URL")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
}
model Blog {
  id         String    @id @default(uuid())
  title      String
  desc       String
  image      String
  categoryId String
  paragraphs Json?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}